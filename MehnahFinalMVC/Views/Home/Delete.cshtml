@model MehnahFinalApi.DTO.WorkDto

@{
    ViewData["Title"] = "حذف العمل";
}

<h2>حذف العمل</h2>

<p>هل أنت متأكد من حذف العمل التالي؟</p>

<p>
    <strong>@Model.Description</strong> - السعر: @Model.Price
</p>

<form asp-action="DeleteConfirmed" method="post">
