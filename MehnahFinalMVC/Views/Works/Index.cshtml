@model MehnahFinalMVC.ViewModels.HomeViewModel

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Work</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Contact Method</th>
            <th>Available</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Works != null && Model.Works.Any())
        {
            foreach (var item in Model.Works)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Category</td>
                    <td>@item.ContactMethod</td>
                    <td>@(item.IsAvailable ? "✅ Yes" : "❌ No")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.WorkImagesUrl))
                        {
                            <img src="@item.WorkImagesUrl" alt="Work Image" width="100" height="100" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No works available</td>
            </tr>
        }
    </tbody>
</table>
