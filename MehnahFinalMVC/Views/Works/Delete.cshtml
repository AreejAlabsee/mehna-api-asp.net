@model MehnahFinalApi.DTO.WorkDto

@{
    ViewData["Title"] = "Delete Work";
}

<h2>Delete Work</h2>

<h4>Are you sure you want to delete this work?</h4>

<table class="table table-bordered">
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.Category</td>
    </tr>
    <tr>
        <th>Contact Method</th>
        <td>@Model.ContactMethod</td>
    </tr>
    <tr>
        <th>Available</th>
        <td>@(Model.IsAvailable ? "Yes" : "No")</td>
    </tr>
    <tr>
        <th>Image</th>
        <td>
            @if (!string.IsNullOrEmpty(Model.WorkImagesUrl))
            {
                <img src="@Model.WorkImagesUrl" alt="Work Image" width="150" />
            }
            else
            {
                <span>No Image</span>
            }
        </td>
    </tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
