@model MehnahFinalApi.DTO.UserReadDto

@{
    ViewData["Title"] = "Worker Details";
}

<h2>Worker Details</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Password</th>
        <td>@Model.Password</td>
    </tr>
    <tr>
        <th>PhoneNumber</th>
        <td>@Model.PhoneNumber</td>
    </tr>
     <tr>
        <th>Image</th>
        <td>
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" alt="Worker Image" width="150" />
            }
            else
            {
                <span>No Image</span>
            }
        </td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
