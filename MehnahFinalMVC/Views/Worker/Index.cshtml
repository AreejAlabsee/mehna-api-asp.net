 @model MehnahFinalMVC.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Workers List";
}

<h2>Workers</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Worker</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null && Model.Users.Any())
        {
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ProfileImageUrl))
                    {
                        <img src="@item.ProfileImageUrl" alt="Work Image" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                    
                   
                </td>
                <td>@item.Name</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Password</td>
                <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }}
    </tbody>
</table>


