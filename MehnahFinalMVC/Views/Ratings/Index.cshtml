@model List<MehnahFinalMVC.ViewModels.RatingViewModel>

@{
    ViewData["Title"] = "Ratings List";
}

<h2>Ratings List</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a class="btn btn-success" asp-action="Create">Add New Rating</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Work ID</th>
                <th>Reviewer</th>
                <th>Stars</th>
                <th>Comment</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rating in Model)
            {
                <tr>
                    <td>@rating.Id</td>
                    <td>@rating.WorkId</td>
                    <td>@rating.ReviewerName</td>
                    <td>@rating.Stars</td>
                    <td>@rating.Comment</td>
                    <td>@rating.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@rating.Id">Details</a>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@rating.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@rating.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No ratings found.</p>
}
