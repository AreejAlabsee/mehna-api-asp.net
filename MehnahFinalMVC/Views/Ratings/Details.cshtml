@model MehnahFinalMVC.ViewModels.RatingViewModel

@{
    ViewData["Title"] = "Rating Details";
}

<h2>Rating Details</h2>

<div class="card shadow-sm p-3 mb-3">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Work ID:</strong> @Model.WorkId</p>
        <p><strong>Reviewer:</strong> @Model.ReviewerName</p>
        <p><strong>Stars:</strong> @Model.Stars</p>
        <p><strong>Comment:</strong> @Model.Comment</p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>
    </div>
</div>

<a class="btn btn-secondary" asp-action="Index">Back to List</a>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
