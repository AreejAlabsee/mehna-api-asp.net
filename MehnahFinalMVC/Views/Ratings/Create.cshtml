@model MehnahFinalMVC.ViewModels.RatingViewModel

@{
    ViewData["Title"] = "Create Rating";
}

<h2>Create New Rating</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="WorkId" class="form-label">Work ID</label>
        <input asp-for="WorkId" class="form-control" />
        <span asp-validation-for="WorkId" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Stars" class="form-label">Stars</label>
        <input asp-for="Stars" type="number" min="1" max="5" class="form-control" />
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Comment</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
