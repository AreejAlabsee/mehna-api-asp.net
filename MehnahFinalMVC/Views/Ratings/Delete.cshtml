@model MehnahFinalMVC.ViewModels.RatingViewModel

@{
    ViewData["Title"] = "Delete Rating";
}

<h2>Delete Rating</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Rating</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Stars</dt>
        <dd class="col-sm-10">@Model.Stars</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>

        <dt class="col-sm-2">Reviewer</dt>
        <dd class="col-sm-10">@Model.ReviewerName</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Work Id</dt>
        <dd class="col-sm-10">@Model.WorkId</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
