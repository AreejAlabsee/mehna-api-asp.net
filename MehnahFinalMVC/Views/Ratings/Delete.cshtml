@model MehnahFinalMVC.ViewModels.RatingViewModel

@{
    ViewData["Title"] = "Delete Rating";
}

<h2>Delete Rating</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this rating?
</div>

<div class="card p-3 mb-3">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Work ID:</strong> @Model.WorkId</p>
    <p><strong>Reviewer:</strong> @Model.ReviewerName</p>
    <p><strong>Stars:</strong> @Model.Stars</p>
    <p><strong>Comment:</strong> @Model.Comment</p>
    <p><strong>Created At:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
